<!doctype html>
<html lang="en">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/nav') %>
    <!-- all blogs -->
    <div class="row">
        <div class="container my-4 col-8">
            <% if (blogs.length > 0){ %> 
                <% blogs.forEach(blog =>{ %> 
                     <div class="card mb-2">
                        <div class="card-body">
                         <h2 class="card-title"><%= blog.title %> </h2>
                         <p class="card-text"><%= blog.snippet %> </p>
                            <a href="/<%= blog._id %> " class="btn btn-md btn-outline-secondary">Read...</a>
                        </div>
                     </div>
                <% })%>
            <% }else{ %> 
                 <div class="card mb-2">
                    <div class="card-body">
                        <h2 class="card-title">No Blogs to display</h2>
                        <p class="card-text">Create a new blog to display</p>
                    </div>
                 </div>
                 <% } %>        
         </div>
    </div>

    <%- include('./partials/footer') %>
</body>
</html>